# LLM Configuration
# Options: 'openai' or 'groq'
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Groq Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant

# Storage Configuration
# Options: 'local' or 's3'
# Use 'local' if you don't have AWS (documentation saved to /tmp/codebase_docs)
# Use 's3' if you have AWS credentials configured
STORAGE_MODE=local

# AWS S3 Configuration (only needed if STORAGE_MODE=s3)
# AWS_ACCESS_KEY_ID=your_aws_access_key_id
# AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=codebase-documenter-docs

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Backend Configuration
BACKEND_PORT=8000
FRONTEND_URL=http://localhost:3000

# Environment
ENVIRONMENT=development
